<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">
  <!-- A filter that allows Cloud Orchestrators to perform health checks    -->
  <!-- on the current instance.                                             -->
  <!--                                                                      -->
  <!-- The filter returns a code 200 (OK) when the current instance is      -->
  <!-- successfully running inside the Cloud based Cluster. Otherwise, the  -->
  <!-- filter returns a code 500 (Internal Server Error).                   -->
    <filter>
        <filter-name>CloudClusterHealthCheckFilter</filter-name>
        <filter-class>
          org.example.tomcat.cloud.TestFilter
        </filter-class>
        <async-supported>true</async-supported>
    </filter>    

  <!-- The mapping for the Cloud Cluster Heath Check Filter -->
    <filter-mapping>
        <filter-name>CloudClusterHealthCheckFilter</filter-name>
        <url-pattern>/health</url-pattern>
    </filter-mapping>

</web-app>
